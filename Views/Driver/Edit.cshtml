@model PassionProject_Danyal.Models.ViewModels.UpdateDriver

@{
    ViewBag.Title = "Edit";
}

<h2>Update Driver</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Driver</h4>
