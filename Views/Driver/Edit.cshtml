        <div class="col-md-10">
            @Html.EditorFor(model => model.driver.Abbreviation, new { htmlAttributes = new { @class = "form-control", Name = "Abbreviation" } })
            @Html.ValidationMessageFor(model => model.driver.Abbreviation, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.driver.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.driver.Status, new { htmlAttributes = new { @class = "form-control", Name = "Status" } })
            @Html.ValidationMessageFor(model => model.driver.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.driver.TeamID, htmlAttributes: new { @class = "control-label col-md-2", Name = "TeamID" })
        <div class="col-md-10">
            <select name="TeamID">
                @foreach (var team in Model.allteams)
                {
                    //Auto-selects the team the driver is currently assigned to
                    string selected = "";
                    if (Model.driver.TeamID == team.TeamID)
                    {
                        selected = "";
                    }
                    <option value="@team.TeamID">@team.TeamName</option>
                }
            </select>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
