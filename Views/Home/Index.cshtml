@{
    ViewBag.Title = "Home Page";
}

<div class="banner">
    <h1>F1 ESports League Manager (Beta)</h1>
    <p class="tagline">This is first MVP version developed on MVC ASP.Net with Entity Framework. <br>
    The work is still in progress...</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Drivers</h2>
        <p>
            All about drivers, their status, info, and wins.
        </p>
        <p class="fbutton">@Html.ActionLink("Check it Now", "List", "Driver")</p>
    </div>
    <div class="col-md-4">
        <h2>Teams</h2>
        <p>See participating teams along with their drivers.</p>
        <p class="fbutton">@Html.ActionLink("See All Teams", "List", "Team")</p>
    </div>
    <div class="col-md-4">
        <h2>Race Schedule</h2>
        <p>Check the schedule of the current league season.</p>
        <p class="fbutton">@Html.ActionLink("See Schedule", "List", "Schedule")</p>
    </div>
</div>